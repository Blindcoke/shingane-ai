{
  "name": "shingane-ai",
  "displayName": "shingane-ai",
  "description": "A VS Code AI assistant that processes editor context using LangChain and OpenAI.",
  "version": "0.0.1",
  "publisher": "shingane",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onChatParticipant:shingane-ai.shingane"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "shingane-ai.shingane",
        "name": "shingane",
        "description": "Shingane AI Assistant",
        "isSticky": true
      }
    ],
    "commands": [
      {
        "command": "shingane-ai.configureApiKey",
        "title": "Shingane AI: Configure OpenAI API Key"
      },
      {
        "command": "shingane-ai.clearApiKey",
        "title": "Shingane AI: Clear OpenAI API Key"
      }
    ],
    "configuration": {
      "title": "Shingane AI",
      "properties": {
        "shingane-ai.showEditPreview": {
          "type": "boolean",
          "default": true,
          "description": "Show diff preview before applying AI-generated edits."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@langchain/core": "^1.1.12",
    "@langchain/openai": "^1.2.1",
    "@types/diff": "^7.0.2",
    "diff": "^8.0.2",
    "zod": "^4.3.5"
  }
}
